        android:text="Senha" />

    <EditText
        android:id="@+id/texto_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelSenha"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="71dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/labelSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="40dp"
        android:text="UsuÃ¡rio" />

    <EditText
        android:id="@+id/texto_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelUsuario"
        android:layout_alignStart="@+id/texto_login"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/botao_login"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/labelUsuario"
        android:layout_marginTop="145dp"
        android:text="Button" />
</RelativeLayout>