<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutMenuLateral3"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"></include>
        <ScrollView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:context=".CadastrarAnimais"
                >

                <TextView
                    android:id="@+id/URL_foto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="URL da foto do animal" />

                <EditText
                    android:id="@+id/urlFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/nome_animal"
                    android:layout_width="164dp"
                    android:layout_height="49dp"
                    android:text="Nome Animal: " />

                <EditText
                    android:id="@+id/input_nome_animal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/raca_animal"
                    android:layout_width="164dp"
                    android:layout_height="54dp"
                    android:text="RaÃ§a" />

                <EditText
                    android:id="@+id/input_raca_animal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
                <TextView
                    android:id="@+id/tamanho_animal"
                    android:layout_width="164dp"
                    android:layout_height="54dp"
                    android:text="Tamanho" />

                <EditText
                    android:id="@+id/input_tamanho_animal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/submit_animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/menu_tela_inicial3"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/menu_lateral_cabecalho"
        app:menu="@menu/menu_lateral"></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>